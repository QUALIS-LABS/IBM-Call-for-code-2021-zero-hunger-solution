<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Mashinani" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.Mashinani.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Mashinani.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark" />

    <style name="Theme.Mashinani.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="HintLabel" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ProgressDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/tertiary_text</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:background">@color/primary_background</item>
    </style>
</resources>