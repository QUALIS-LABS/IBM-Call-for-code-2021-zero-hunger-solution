<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    tools:context=".IntroActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="329dp"
        android:layout_height="209dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/mashinani_logo_filled"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/mashinani_logo_filled" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Connecting farmers and traders"
        android:textColor="@color/primary_text"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="@+id/imageView"
        app:layout_constraintStart_toStartOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/nunito_regular"
        android:text="Choose your designation below"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/button_farmer"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/nunito_regular"
        android:foreground="@drawable/button_outline_brown"
        android:gravity="center"
        android:text="Farmer"
        android:textColor="@color/white"
        android:textSize="18sp"
        app:buttonColor="@color/primary"
        app:buttonCornerRadius="7dp"
        app:fontFamily="@font/nunito_light"
        app:layout_constraintBottom_toTopOf="@+id/button_trader"
        app:layout_constraintEnd_toEndOf="@+id/button_trader"
        app:layout_constraintStart_toStartOf="@+id/button_trader" />

    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/button_trader"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="16dp"
        android:fontFamily="@font/nunito_regular"
        android:foreground="@drawable/button_outline_yellow"
        android:gravity="center"
        android:text="Trader"
        android:textColor="@color/primary"
        android:textSize="18sp"
        app:buttonColor="@color/accent"
        app:buttonCornerRadius="7dp"
        app:fontFamily="@font/nunito_light"
        app:layout_constraintBottom_toTopOf="@+id/button_driver"
        app:layout_constraintEnd_toEndOf="@+id/button_driver"
        app:layout_constraintStart_toStartOf="@+id/button_driver" />

    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/button_driver"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginBottom="64dp"
        android:fontFamily="@font/nunito_regular"
        android:foreground="@drawable/button_outline_brown"
        android:gravity="center"
        android:text="Driver"
        android:textColor="#4E4E4E"
        android:textSize="18sp"
        app:buttonColor="@color/primary_background"
        app:buttonCornerRadius="7dp"
        app:fontFamily="@font/nunito_light"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="@+id/textView3"
        app:layout_constraintStart_toStartOf="@+id/textView3" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/nunito_extralight"
        android:text="Powered by Qualis Labs"
        android:textColor="@color/tertiary_text"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>