<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_background"
    tools:context=".SignupActivity">

    <TextView
        android:id="@+id/textView4"
        android:layout_width="131dp"
        android:layout_height="102dp"
        android:layout_marginTop="32dp"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="@color/primary_text"
        android:textSize="40sp"
        app:layout_constraintStart_toStartOf="@+id/edit_signup_name"
        app:layout_constraintTop_toTopOf="parent" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_signup_name"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:fontFamily="@font/nunito_regular"
        android:hint="Name"
        android:inputType="text"
        android:paddingStart="8dp"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:met_baseColor="@color/secondary_text"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/black"
        app:met_floatingLabelTextSize="16sp"
        app:met_primaryColor="@color/secondary_text"
        app:met_textColor="@color/secondary_text"
        app:met_textColorHint="@color/secondary_text"
        app:met_underlineColor="@color/secondary_text" />


    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_signup_email"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_regular"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:paddingStart="8dp"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_signup_name"
        app:layout_constraintStart_toStartOf="@+id/edit_signup_name"
        app:layout_constraintTop_toBottomOf="@+id/edit_signup_name"
        app:met_baseColor="@color/secondary_text"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/black"
        app:met_floatingLabelTextSize="16sp"
        app:met_primaryColor="@color/secondary_text"
        app:met_textColor="@color/secondary_text"
        app:met_textColorHint="@color/secondary_text"
        app:met_underlineColor="@color/secondary_text" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_signup_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_regular"
        android:hint="Confirm Password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_signup_email"
        app:layout_constraintStart_toStartOf="@+id/edit_signup_email"
        app:layout_constraintTop_toBottomOf="@+id/edit_signup_email"
        app:met_baseColor="@color/secondary_text"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/secondary_text"
        app:met_floatingLabelTextSize="16sp"
        app:met_primaryColor="@color/secondary_text"
        app:met_textColor="@color/secondary_text"
        app:met_textColorHint="@color/secondary_text"
        app:met_underlineColor="@color/secondary_text" />

    <com.rengwuxian.materialedittext.MaterialEditText
        android:id="@+id/edit_signup_confirm_password"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/nunito_regular"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingStart="8dp"
        android:textColor="@color/secondary_text"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="@+id/edit_signup_password"
        app:layout_constraintStart_toStartOf="@+id/edit_signup_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_signup_password"
        app:met_baseColor="@color/secondary_text"
        app:met_floatingLabel="highlight"
        app:met_floatingLabelTextColor="@color/secondary_text"
        app:met_floatingLabelTextSize="16sp"
        app:met_primaryColor="@color/secondary_text"
        app:met_textColor="@color/secondary_text"
        app:met_textColorHint="@color/secondary_text"
        app:met_underlineColor="@color/secondary_text" />

    <life.sabujak.roundedbutton.RoundedButton
        android:id="@+id/button_signup"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/nunito_regular"
        android:gravity="center"
        android:text="Sign up"
        android:textColor="@color/secondary_text"
        android:textSize="18sp"
        app:buttonColor="@color/accent"
        app:buttonCornerRadius="7dp"
        app:layout_constraintEnd_toEndOf="@+id/edit_signup_confirm_password"
        app:layout_constraintStart_toStartOf="@+id/edit_signup_confirm_password"
        app:layout_constraintTop_toBottomOf="@+id/edit_signup_confirm_password" />

    <TextView
        android:id="@+id/text_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:fontFamily="@font/nunito_bold"
        android:text="Already have an account?"
        android:textColor="@color/secondary_text"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/button_signup"
        app:layout_constraintStart_toStartOf="@+id/button_signup"
        app:layout_constraintTop_toBottomOf="@+id/button_signup" />


</androidx.constraintlayout.widget.ConstraintLayout>